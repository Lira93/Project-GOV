{% extends 'base.html.twig' %}

{% block title %}Hello ApiCityController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Zadanie rekrutacyjne PG</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Miasto</th>
            <th>Akcja</th>
        </tr>
        </thead>
        <tbody>

        {% for id,city in cities %}
            <tr>
                {% if city.0.name is not null %}
                    <td>{{ city.0.name }}</td>
                    <td><button class="btn btn-info"><a class="text-white" href="city/{{ id }}">Zobacz</a></button></td>

                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
